@using V_verPlatform.Models.Module
@using System.Collections.Generic
@{
    ViewBag.Title = "Index";
    List < KfzBjDate > kfzbkList=(List<KfzBjDate>)ViewBag.kfzList;
}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<head>
    <title>V-ver</title>
</head>
<script src="~/Content/js/jquery.min.js"></script>
<script src="~/Content/js/jquery-ui.min.js"></script>
@RenderPage("~/Views/Shared/Loading.cshtml")
<script> 
    function ycLogoPng() {
        $(".logo").animate({
            opacity: '0'
        });
        $(".pngbfm").hide();
    }
    function xsLogoPng() {
        $(".logo").animate({
            opacity: '1'
        });
        $(".pngbfm").show();
    }
    $(document).ready(function () {
        $(".MainDiv").mouseenter(function () {
            var w = document.body.clientWidth;
            if (w <= 900) {
                $("#pov").animate({
                    width: '80%',
                    opacity: '1',

                });
                $("#fzgj").animate({
                    width: '80%',
                    opacity: '1',

                });
            }
            if (w > 900) {
                $("#pov").animate({
                    width: '0%',
                    opacity: '0',
                });
                $("#fzgj").animate({
                    width: '0%',
                    opacity: '0',
                });
            }
        });
    $("#mgpng1").mouseenter(function () {
        $("#mgpng1").animate({
            opacity: '1',
        });
        $("#pov").animate({
            width:'80%',
            opacity: '1',
           
        });
        ycLogoPng();
    });
    $("#mgpng1").mouseleave(function () {
        $("#mgpng1").animate({
            opacity: '0.2',
        });
        $("#pov").animate({
            width: '0%',
            opacity: '0',

        });
        xsLogoPng();
    });
    $("#mgpng2").mouseenter(function () {
        $("#mgpng2").animate({
            opacity: '1',
        });
        $("#fzgj").animate({
            width: '80%',
            opacity: '1',
        });
        ycLogoPng();
    });
    $("#mgpng2").mouseleave(function () {
        $("#mgpng2").animate({
            opacity: '0.2',
        });
        $("#fzgj").animate({
            width: '0%',
            opacity: '0',
        });
        xsLogoPng();
    });
    $("#mgpng3").mouseenter(function () {
        $("#mgpng3").animate({
            opacity: '1',
        });
    });
    $("#mgpng3").mouseleave(function () {
         $("#mgpng3").animate({
            opacity: '0.2',
        });
    });
});
</script> 
<link href="~/App_Themes/ShowBlueStyle/index.css" rel="stylesheet" />
<link href="~/Content/css/cssdonghua.css" rel="stylesheet" />
    
<div class="MainDiv">
   <img class="logo" src="~/Content/img/BuildUsed/logo.png" />
   <img class="pngbfm" src="~/Content/img/BuildUsed/pngbfm.png" />
   <a href ="program"> <img class="bigpng" id="pov" src="~/Content/img/BuildUsed/pov.png" /></a>
   <a href ="novel"> <img class="bigpng" id="fzgj" src="~/Content/img/BuildUsed/fzgj.png" /></a>
    <img class="code1" src="~/Content/img/BuildUsed/code1.png" />
    <img class="magicarray bm1" src="~/Content/img/BuildUsed/standardMagicarray1.png" />
    <img class="magicarray bm2" src="~/Content/img/BuildUsed/standardMagicarray1.png" />
           <div class="kfzDiv" style="color:#fff; font-family: 微软雅黑, 'Microsoft YaHei', sans-serif;">
        <div style="margin:5%">
            <span><img style="width:20%; height:auto;" src="~/Content/img/BuildUsed/SWlogo.png" /></span>
            <span style="text-align:center; font-size:110%;" >&nbsp&nbsp&nbsp宿帏社开发笔记</span>
        </div>
@foreach (KfzBjDate x in kfzbkList)
{
     <div style="margin:5%;background-color:rgba(255, 255, 255, 0.20)">
         <div margin:3%>
             @x.datetime.Year 年 @x.datetime.Month 月 @x.datetime.Day 日
         </div>
         <div style="margin:3%">
             <p>@x.note</p>
             <p style="text-align:right">开发者：@x.kfzName</p>
         </div>
     </div>
}
    </div>
    <div class="div1">
    <a href ="program"><img id="mgpng1" style="border:none;" src="~/Content/img/BuildUsed/mfz1.png" /></a>
    <a href ="novel"><img id="mgpng2" style="border:none;" src="~/Content/img/BuildUsed/mfz2.png" /></a>
    <a href ="user"><img id="mgpng3" style="border:none;" src="~/Content/img/BuildUsed/mfz3.png" /></a>
    </div>
    <div class="region" style="position:absolute; width:100%; font-family: 微软雅黑, 'Microsoft YaHei'; font-style:inherit; color:white; text-align:center;">
        <h3 class="shorthand">@V_verPlatform.Models.CommonUse.XmlCommon.RetRegion().ChildNodes[0].InnerText @V_verPlatform.Models.CommonUse.XmlCommon.RetRegion().ChildNodes[1].InnerText</h3>
    </div>
</div>

