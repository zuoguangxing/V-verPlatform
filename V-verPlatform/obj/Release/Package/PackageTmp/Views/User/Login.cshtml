@{
    Layout = null;
}
<link href="~/App_Themes/ShowBlueStyle/userLogin.css" rel="stylesheet" />
   <head>
      <title>Register</title>
      <!-- 引入 Bootstrap -->
       <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

      <!-- HTML5 Shim 和 Respond.js 用于让 IE8 支持 HTML5元素和媒体查询 -->
      <!-- 注意： 如果通过 file://  引入 Respond.js 文件，则该文件无法起效果 -->
      <!--[if lt IE 9]>
         <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
         <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
      <![endif]-->
   </head>
<div class="MainDiv">
<form role="form" onsubmit="BeginGo()" method="post" action="Login" runat="server" style="text-align:center;">
    <h3 style="color:#a99eef;font-family:微软雅黑, 'Microsoft YaHei', sans-serif;">Login</h3>
    <br />
     <div class="input-group">
         <span class="input-group-addon">ACT</span>
         <input name="act" id="act" type="text" class="form-control" placeholder="your account" required="required" maxLength="10">
      </div>
    <br/>
      <div class="input-group">
         <span class="input-group-addon">PWD</span>
         <input name="pvd" id="pvd"  type="password" class="form-control" placeholder="your password" required="required" maxLength="16">
      </div>
   <br/>
    <span style="color:#a99eef;font-family:微软雅黑, 'Microsoft YaHei', sans-serif;">@ViewBag.Message</span>
    <br />
    <input class="btn btn-default" type="submit" value="Submit">
</form>
    <div style="text-align:center;">
    <h4 style="color:#a99eef;font-family:微软雅黑, 'Microsoft YaHei', sans-serif;">If you don't have a account,you can register.</h4>
   <button type="button" class="btn btn-default" onclick="open_win()" >
      Register
   </button>
    </div>
    </div>
<!-- jQuery (Bootstrap 的 JavaScript 插件需要引入 jQuery) -->
<script src="~/Content/js/jquery.min.js"></script>
<!-- 包括所有已编译的插件 -->
<script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
<script src="~/Content/js/jqMD5.js"></script>
<script>
    //提交后验证
    function BeginGo() {
        var md5pr = $.md5($('#pvd').val());
        $('#pvd').val(md5pr);
    }
</script>
<script>
function open_win() 
{
window.open("Register");
}
</script>
@RenderPage("~/Views/Shared/footer.cshtml")