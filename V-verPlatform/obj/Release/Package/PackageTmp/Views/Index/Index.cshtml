<script>
    $(window).load(function () {
        $(".yujiazai").animate({
            height: '0%',
        opacity: '0',
        }, 2000);
        if ($.browser.msie)
        {
            $(".yujiazai").hide(20);
        }
        $(".MainDiv").show();
    });
</script>
<script> 
    function ycLogoPng() {
        $(".logo").animate({
            opacity: '0'
        });
        $(".pngbfm").hide();
    }
    function xsLogoPng() {
        $(".logo").animate({
            opacity: '1'
        });
        $(".pngbfm").show();
    }
    $(document).ready(function () {
        $(".MainDiv").mouseenter(function () {
            var w = document.body.clientWidth;
            if (w <= 900) {
                $("#pov").animate({
                    width: '80%',
                    opacity: '1',

                });
                $("#fzgj").animate({
                    width: '80%',
                    opacity: '1',

                });
            }
            if (w > 900) {
                $("#pov").animate({
                    width: '0%',
                    opacity: '0',
                });
                $("#fzgj").animate({
                    width: '0%',
                    opacity: '0',

                });
            }
        });
    $("#mgpng1").mouseenter(function () {
        $("#mgpng1").animate({
            opacity: '1',
        });
        $("#pov").animate({
            width:'80%',
            opacity: '1',
           
        });
        ycLogoPng();
    });
    $("#mgpng1").mouseleave(function () {
        $("#mgpng1").animate({
            opacity: '0.2',
        });
        $("#pov").animate({
            width: '0%',
            opacity: '0',

        });
        xsLogoPng();
    });
    $("#mgpng2").mouseenter(function () {
        $("#mgpng2").animate({
            opacity: '1',
        });
        $("#fzgj").animate({
            width: '80%',
            opacity: '1',
        });
        ycLogoPng();
    });
    $("#mgpng2").mouseleave(function () {
        $("#mgpng2").animate({
            opacity: '0.2',
        });
        $("#fzgj").animate({
            width: '0%',
            opacity: '0',
        });
        xsLogoPng();
    });
    $("#mgpng3").mouseenter(function () {
        $("#mgpng3").animate({
            opacity: '1',
        });
    });
    $("#mgpng3").mouseleave(function () {
         $("#mgpng3").animate({
            opacity: '0.2',
        });
    });
});
</script> 
